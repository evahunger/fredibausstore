<!DOCTYPE html>
<html>
<head>
  <title>Fredi Baus</title>

  <!--Bootstrap CSS starts here-->
  <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css" rel="stylesheet">
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>

  <!--jQuery library starts here-->
  <script src="//code.jquery.com/jquery-1.11.3.min.js"></script>
  <!--Bootstrap Javascript starts here-->
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>

  <!--Hidden Search field starts here-->
  <script>
  $(document).ready(function(){
    $('#q').on("focus", function(){
      $(this).animate({
        width: "100px"
      });
    });

    $('#q').on("blur", function(){
      $(this).animate({
        width: "20px",
      });
    });
  });
  </script>

  <!--Google Fonts start here-->
  <link href='//fonts.googleapis.com/css?family=Fauna+One|Halant:500|Monofett' rel='stylesheet' type='text/css'>

  <%= csrf_meta_tags %>
</head>

<!--Navbar starts here-->
<body data-spy="scroll" data-target=".navbar">
  <nav>
    <div class="navbar navbar-inverse navbar-fixed-top" role="navigation" id="navbar">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" 
          data-target=".navbar-collapse">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          </button>
        </div>

          <div class="navbar-collapse collapse">
              
            <ul class="nav navbar-nav" id="nav">
              <li><a href="http://fredibaus.wix.com/fredibaus">Back to site</a></li>
              <li>
              <%= link_to "Cart", products_path %>
              </li>

              <li>
              <%= form_tag("/products", method: "get") do %>
              <div class="field" id="SearchLabelTag">

              <%= label_tag(:q, "") %>
              </div>

              <%= text_field_tag(:q) %>
              <%= submit_tag("Search") %>
              <% end %>
              </li>


            </ul>
          </div> <!--end navbar-collapse-->
        </div> <!--end navbar header-->
      </div> <!--end container fluid-->
    </div> <!-- navbar -->
  </nav>
<!--Navbar ends here-->
<h1>Fredi Baus</h1>
<h2>Handmade Fashion from Italy<br><br></h2>

<%= yield %>

<!--footer-->
<footer>
  <div class="container" id="footer">
    <%= link_to "Contact", static_pages_contact_path %>
  </div>
</footer>

</body>
</html>
